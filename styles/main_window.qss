/* === GLOBAL BASE === */
QWidget {
    font-family: 'Segoe UI', 'Arial', sans-serif;
    font-size: 16px;
}

/* === TEXT STYLES === */
QLabel[class="main-title"] {
    font-size: 26px;            
    font-weight: 600;           
    padding: 8px 10px;         
}

QLabel[class="subtitle"] {
    font-size: 18px;           
    font-weight: 500;          
    padding: 6px 10px;
}

QLabel[class="question-label"] {
    font-size: 22px;
    padding: 10px;
}

/* === ANSWER INPUT BASE === */
QLineEdit[class="answer-input"] {
    font-size: 20px;
    padding: 10px;
    border: 2px solid #ccc;
    border-radius: 10px;
}

/* === LIGHT THEME === */
QWidget[theme="light"] {
    background-color: #f5f7fa;
    color: #2c3e50;
}

QLabel[class="main-title"][theme="light"],
QLabel[class="subtitle"][theme="light"],
QLabel[class="question-label"][theme="light"] {
    color: #2c3e50;
}

QLineEdit[class="answer-input"][theme="light"] {
    font-size: 20px;
    padding: 6px 10px;             /* Top-bottom padding should be less */
    min-width: 140px;
    color: #000;
}

QLineEdit[class="answer-input"][theme="light"]:focus {
    border: 2px solid #3498db;
    background-color: #eef9ff;
}

/* LIGHT THEME BUTTONS */
QPushButton[class="menu-button"][theme="light"],
QPushButton[class="footer-button"][theme="light"],
QPushButton#audio-button[theme="light"] {
    background-color: #3498db;
    color: white;
    font-size: 16px;
    font-weight: normal;
    padding: 10px 20px;
    border-radius: 8px;
    border: 1px solid #2980b9;
}

QPushButton[class="menu-button"][theme="light"]:hover,
QPushButton[class="footer-button"][theme="light"]:hover,
QPushButton#audio-button[theme="light"]:hover {
    background-color: #2471a3; /* Slightly darker hover */
}

/* === DARK THEME === */
QWidget[theme="dark"] {
    background-color: #1e1e1e;
    color: #ffffff;
}

QLabel[class="main-title"][theme="dark"],
QLabel[class="subtitle"][theme="dark"],
QLabel[class="question-label"][theme="dark"] {
    color: #ffffff;
}

QLineEdit[class="answer-input"][theme="dark"] {
    background-color: #2c2c2c;
    color: #ffffff;
    border: 2px solid #5dade2;
    font-size: 20px;
    
    padding: 6px 10px;  
    min-width: 140px;
}

QLineEdit[class="answer-input"][theme="dark"]:focus {
    background-color: #3a3a3a;
    border-color: #82cfff;
}

/* DARK THEME BUTTONS */
QPushButton[class="menu-button"][theme="dark"],
QPushButton[class="footer-button"][theme="dark"],
QPushButton#audio-button[theme="dark"] {
    background-color: #2d3748;
    color: #ffffff;
    font-size: 16px;
    padding: 10px 20px;
    border-radius: 8px;
    border: 1px solid #5dade2;
}

QPushButton[class="menu-button"][theme="dark"]:hover,
QPushButton[class="footer-button"][theme="dark"]:hover,
QPushButton#audio-button[theme="dark"]:hover {
    background-color: #3c4c5a;
    color: #ffffff;
}

/* === TAB FOCUS (ACCESSIBILITY) === */
QPushButton:focus {
    outline: none;
    border: 2px solid #ff9900;
}

QPushButton[theme="light"]:focus {
    background-color: #c0d7ecff;
    color: #000;
    border: 2px solid #ff9900;
}

QPushButton[theme="dark"]:focus {
    background-color: #3a3f44;
    color: #ffffff;
    border: 2px solid #ff9900;
}

QPushButton#audio-button:focus {
    border: 2px solid #ff9900;
    outline: none;
}

QPushButton#audio-button[theme="light"]:focus {
    background-color: #c0d7ecff;
    color: #000;
}

QPushButton#audio-button[theme="dark"]:focus {
    background-color: #3a3f44;
    color: #ffffff;
}
